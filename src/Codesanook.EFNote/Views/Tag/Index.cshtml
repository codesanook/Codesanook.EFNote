@using Codesanook.EFNote.Models
@using Codesanook.EFNote.Controllers

@model IEnumerable<Tag>
@{
  ViewData["Title"] = "Tag - index";
}

<div class="secondary-menu">
  <div class="col-12">
    <a class="btn btn-light" href="@Url.Action("Create")" role="button">
      <i class="fa fa-plus-circle"></i> New
    </a>
  </div>
</div>

<div class="main-panel">
  <div class="col-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th># of notes</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var tag in Model)
        {
          <tr>
            <td>@tag.Id</td>
            <td>@tag.Name</td>
            <td>@tag.Notes.Count()</td>
            <td>
              <a class="btn btn-light" href="@Url.Action(
                  "Edit",
                  "Tag", new { id = tag.Id}
                )" role="button">
                <i class="fa fa-edit"></i> Edit
              </a>
              <a class="btn btn-light" href="@Url.Action(
                  "Delete",
                  "Tag", new { id = tag.Id}
                )" role="button">
                <i class="fa fa-trash"></i> Delete
              </a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
