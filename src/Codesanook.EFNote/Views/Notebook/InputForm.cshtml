@using Codesanook.EFNote.Models
@model Notebook
@{
  ViewData["Title"] = "Notebook - index";
}

<div class="main-panel">
  <div class="col-12">
    @using (Html.BeginForm())
    {
      <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-label-sm form-label" })
        <div class="col-sm-10">
          @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-sm title" })
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-light">
            <i class="fa fa-save"></i> Save
          </button>
        </div>
      </div>
    }
  </div>
</div>
